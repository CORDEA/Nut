<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/common_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_marginBottom="@dimen/notification_title_bottom_margin"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/AppTheme.Button"
            android:id="@+id/a_button"
            android:text="@string/macadamia"
            android:layout_marginEnd="@dimen/notification_button_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            style="@style/AppTheme.Button"
            android:id="@+id/b_button"
            android:text="@string/peanut"
            android:layout_marginEnd="@dimen/notification_button_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            style="@style/AppTheme.Button"
            android:id="@+id/c_button"
            android:text="@string/almond"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
